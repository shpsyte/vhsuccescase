{% extends "_layouts/auth.njk" %}
{% block body %}
<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card">
        <div class="card-content">
          <span class="card-title black-text">Sign Up</span>
          <form action="/signup" method="post">
            <div class="row">
             <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                <input id="name" name="name" placeholder="Name" required type="text" class="validate">
                <label for="name">Name</label>
              </div>
            </div>
            <div class="row">
               <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input id="email" name="email" placeholder="Email" required type="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
               <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                <input id="password" name="password" placeholder="Password" required type="password" class="validate">
                <label for="password">Password</label>

              </div>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
            <a class="btn waves-effect waves-light" href="/signin">
            <i class="material-icons right">verified_user</i> I've account</a>

            <a class="btn waves-effect waves-light" href="/">Home</a>



          </form>
        </div>
      </div>
    </div>
{% endblock %}
